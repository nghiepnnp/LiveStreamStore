
<div id="modalLogin" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Đăng nhập</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="loginform" action="index.html">

                    <div class="form-group">
                        <div class="col-xs-12">
                            <label class="col-xs-12">Số điện thoại đăng nhập: </label>
                            <div class="col-xs-12">
                                <input class="form-control" id="PhoneLogin" type="text" required placeholder="Số điện thoại" minlength="10" maxlength="10" />
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-danger" id="LoginError" style="display:none">

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info waves-effect" id="btnLogin">Đăng nhập</button>
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal" id="CancelLogin">Hủy</button>
            </div>
        </div>
    </div>
</div>