    <script src="~/Media/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
    <script>
        $().ready(function () {
            var offset = - (new Date().getTimezoneOffset() * 60);
            $("#timezone").val(offset);
        })

        $("#btn-LoginFaceBook").click(function () {
            window.location.href = "/signinfacebook?timezoneoffset=" + $("#timezone").val();
        })
    </script>
